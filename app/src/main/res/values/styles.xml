<resources>

    <!-- Base application theme. -->
    <style name="AppThemet" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="android:colorBackground">@color/ColorFondo</item>
        <item name="android:icon">@drawable/telcelnosune</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/bordes</item>
        <item name="colorControlActivated">@color/bordes</item>
        <item name="colorControlHighlight">@color/bordes</item>
        <item name="colorAccent">@color/bordes</item>




        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:icon">@drawable/telcelnosune</item>
        <item name="android:homeAsUpIndicator">@drawable/nav</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/bordes</item>
        <item name="colorControlActivated">@color/bordes</item>
        <item name="colorControlHighlight">@color/bordes</item>
        <item name="colorAccent">@color/bordes</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">@color/tituloRevista</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>

    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">10sp</item><!-- text size in menu-->
        <!-- item size in menu-->
    </style>

</resources>

