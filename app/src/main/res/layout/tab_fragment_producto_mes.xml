<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:background="@color/ColorFondo">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:weightSum="100"
            android:layout_marginTop="3dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="48"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="40"
                android:orientation="vertical"
                android:weightSum="100"
                android:background="@drawable/border"
                android:padding="1dp"
                android:minHeight="300dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="Este mes"
                    android:background="@drawable/border_top_revista"
                    android:id="@+id/txtMesMain"
                    android:layout_margin="0dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="100"
                    android:orientation="vertical"
                    android:weightSum="100"
                    android:padding="2dp"
                    android:id="@+id/linearPrincipalNT">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_weight="36"
                        android:layout_height="fill_parent"
                        android:id="@+id/imagenUNT" />
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="64"
                        android:layout_margin="15px"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <TextView
                            android:layout_width="match_parent"

                            android:textColor="@color/ColorPrimary"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_weight="68"
                            android:layout_height="match_parent"
                            android:id="@+id/titUN"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="32"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_height="match_parent"
                            android:id="@+id/descUN"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="Este Mes"
                    android:background="@drawable/border_meses_anteriores"
                    android:id="@+id/textView17"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="3dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/border"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_margin="0dp" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="60" >

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="90dp"
                            android:id="@+id/imageView14"
                            android:layout_marginLeft="3dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="40"
                        android:weightSum="10"
                        android:padding="15dp" >

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="left"
                            android:layout_centerHorizontal="true"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_weight="4"
                            android:text="Enero" />

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Apple iPhone 6S / 6S Plus"
                            android:textColor="@color/ColorPrimary"
                            android:textStyle="bold"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_weight="4"
                            android:gravity="left" />

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_centerHorizontal="true"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_weight="2"
                            android:gravity="left"
                            android:text="El más buscado por su tecnología 3D touch." />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="60"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <RelativeLayout
                    android:id="@+id/loadingPanelProductoMes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="visible">
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true" />
                </RelativeLayout>


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="Meses anteriores"
                    android:background="@drawable/border_meses_anteriores"
                    android:id="@+id/textView14"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="3dp" />
                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lstProductosMes" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="48"></LinearLayout>

    </LinearLayout>


</RelativeLayout>
    </ScrollView>