<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:weightSum="100">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="48"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:weightSum="100">




            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="48">

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:orientation="vertical"
                android:weightSum="100"
                android:background="@drawable/border"
                android:padding="0dp"
                android:id="@+id/linearPrincipal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="25"
                    android:orientation="vertical"
                    android:weightSum="100"
                    android:padding="1dp">
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_weight="30"
                        android:layout_height="fill_parent"
                        android:id="@+id/imagenGrupo" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="70"
                        android:layout_margin="15px"
                        android:orientation="vertical"
                        android:weightSum="100"
                        >
                        <TextView

                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="right"
                            android:layout_centerHorizontal="true"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/fechaGrupo"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:text=""
                            android:textColor="@color/ColorPrimary"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_weight="45"
                            android:layout_height="match_parent"
                            android:id="@+id/titGrupo"/>
                       <!-- <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="30"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text=""
                            android:layout_height="match_parent"
                            android:id="@+id/descGrupo"/>-->
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="27">
                <RelativeLayout
                    android:id="@+id/loadingPanelGrupo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="visible">
                    <ProgressBar

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true" />
                </RelativeLayout>

                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"

                    android:id="@+id/listGrupo" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="48"></LinearLayout>
    </LinearLayout>


</RelativeLayout>