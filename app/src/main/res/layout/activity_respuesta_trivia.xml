<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="net.grapesoft.menu.MainActivity">

        <include layout="@layout/toolbar"/>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/ColorFondo">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="550dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:weightSum="100"
                android:minHeight="300dp"
                android:id="@+id/RelRevista">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="48"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:weightSum="100">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="48"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="4"
                        android:weightSum="100"
                        android:background="@drawable/border">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:weightSum="100"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="60">

                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/imagenTriviaRespuesta" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="40">

                                <TextView
                                    android:id="@+id/titulo"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="La trivia ha sido enviada."
                                    android:textColor="@color/ColorPrimary"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:textSize="16dp"
                                    android:textAlignment="textStart" />

                                <TextView
                                    android:id="@+id/pregunta"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Los ganadores recibirán un mensaje en su teléfono. Ninguna persona ajena &lt;a Telcel bajo ninguna circunstacia podrá participar o recoger el premio de los ganadores. Un sólo pase doble por empleado. El premio únicamente se podrá recoger en el lugar, fecha y hora indicada."
                                    android:gravity="center"
                                    android:layout_centerHorizontal="true"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginRight="5dp"
                                    android:textAlignment="textStart" />

                                <TextView
                                    android:id="@+id/respuesta"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="No haber ganado en dos trivias anteriores."
                                    android:gravity="center"
                                    android:layout_centerHorizontal="true"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:textAlignment="viewStart" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="48">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tyxtErrorTrivias"
                            android:textColor="@color/design_textinput_error_color_light" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="48"/>


            </LinearLayout>


        </RelativeLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:rippleColor="@color/ColorPrimary"
            app:backgroundTint="@color/ColorPrimary"
            android:src="@drawable/asc"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="20dp" />
    </android.support.design.widget.CoordinatorLayout>
    <include layout="@layout/navigation"/>-->
</android.support.v4.widget.DrawerLayout>

