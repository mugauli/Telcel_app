<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"

    android:background="@color/ColorFondo">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".13"></LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".12"
            android:id="@+id/imageView"
            android:src="@drawable/logologin"
            android:layout_gravity="center_horizontal"
            android:minHeight="70dp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".12"></LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresar con:"
            android:id="@+id/textView3"
            android:textColor="#0b4da2"
            android:layout_marginLeft="25dp"
            android:textSize="18dp" />
        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".10"
            android:id="@+id/spnCampos"
            android:spinnerMode="dropdown"
            android:theme="@style/MyEditTextTheme"
            style="@style/SpinnerAppTheme"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="5dp"
            android:minHeight="60dp" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="13"
            android:id="@+id/txtDato"
            android:hint="Ingrese su contrase単a"

            style="@style/EditTextAppTheme"
            android:visibility="invisible"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="17dp"
            android:layout_weight=".10"
            android:maxHeight="120dp"
            android:minHeight="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtErrorDatos"
            android:layout_marginLeft="26dp"
            android:textColor="@color/error"
            android:text="preuba" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contrase単a:"
            android:id="@+id/textView4"
            android:textColor="#0b4da2"
            android:layout_marginLeft="25dp"
            android:textSize="18dp" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="13"
            android:id="@+id/txtPassword"
            android:hint="Ingrese su contrase単a"

            style="@style/EditTextAppTheme"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_weight=".10"
            android:maxHeight="120dp"
            android:minHeight="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtErrorContrasena"
            android:layout_marginLeft="26dp"
            android:textColor="@color/error"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="INGRESAR"
            android:id="@+id/btnIngresar"

            android:textColor="@android:color/white"
            android:background="@drawable/btnshape"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_weight=".10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtValidationPass"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtErrorInternet"
            android:layout_weight=".13"
            android:layout_marginLeft="26dp"
            android:textColor="@color/error"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recuperar contrase単a"
            android:id="@+id/tvRecuperar"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:onClick="onClick"
            android:clickable="true"
            android:textSize="15dp"
            android:textColorLink="@color/abc_input_method_navigation_guard"
            android:textColorHint="@color/abc_input_method_navigation_guard" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".20"></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrarme"
            android:id="@+id/tvRegistrarme"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp"
            android:onClick="@string/URL"
            android:layout_marginTop="10dp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".13"></LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"

            android:src="@drawable/ayudac"
            android:layout_below="@+id/tvRegistrarme"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="  15dp" />

    </LinearLayout>
</RelativeLayout>