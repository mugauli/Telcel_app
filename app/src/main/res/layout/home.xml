<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorFondo"
    android:weightSum="1">
    <RelativeLayout     xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/ColorFondo">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="100">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="10"
                android:layout_weight="38">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="3">

                    <ImageSwitcher
                        android:id="@+id/imageSwitcher"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="fitXY">

                    </ImageSwitcher>

                </LinearLayout>

                <!--   <LinearLayout
                      android:id="@+id/buttons"
                      android:layout_width="fill_parent"
                      android:layout_height="100dp"
                      android:layout_alignParentBottom="false"
                      android:layout_alignParentTop="false"
                      android:layout_weight="2"
                      android:orientation="horizontal"
                      android:weightSum="10">
                      <Button
                          android:id="@+id/btnBack"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="5"
                          android:onClick="backSlider"
                          android:text="&lt;&lt;" />
                      <Button
                          android:id="@+id/btnFwd"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="5"
                          android:onClick="fwdSlider"
                          android:text=">>" />
                </LinearLayout>-->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentEnd="true"
                    android:weightSum="100"
                    android:layout_weight="7">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="100"
                        android:orientation="vertical"
                        android:weightSum="100"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/border"
                        android:layout_marginRight="0dp"
                        android:layout_marginLeft="0dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="50"
                            android:layout_margin="15px"
                            android:orientation="vertical"
                            android:weightSum="100">

                            <TextView
                                android:layout_width="fill_parent"
                                android:textColor="@color/ColorPrimaryDark"
                                android:textStyle="bold"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_height="wrap_content"
                                android:id="@+id/titDNT"/>

                        </LinearLayout>

                        <ScrollView
                            android:id="@+id/SCROLLER_ID"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scrollbars="vertical"
                            android:fillViewport="true"
                            android:layout_weight="50">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_weight="1.0"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_height="match_parent"
                                android:id="@+id/descDNT"/>

                        </ScrollView>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_weight="62" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="100" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:text="Siguiente galerÃ­a"
                        android:background="@drawable/border_siguiente_video"
                        android:id="@+id/textView16"
                        android:layout_margin="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100"
                        android:background="@drawable/border"
                        android:id="@+id/lnySiguienteGaleria"
                        android:layout_marginTop="10dp"
                        android:layout_margin="5dp" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="55"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp" >

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/imagenGaleriaSiguiente"
                                android:src="@drawable/appicon" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="45" >

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtTituloSiguiente"
                                android:text="Siguiente Video"
                                android:textColor="@color/ColorPrimaryDark"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtDuracionSiguente"
                                android:text=""
                                android:padding="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>