                 <CheckBox
                     android:id="@+id/Floreria "
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:text="Florería " />
                 <CheckBox
                     android:id="@+id/Funerarias "
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:text="Funerarias " />
                 <CheckBox
